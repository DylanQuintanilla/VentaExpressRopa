<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/primary_orange</item>
    </style>

    <style name="RegisterButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_orange</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>